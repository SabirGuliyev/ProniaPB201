@model List<GetAdminProductVM>

@{
    int no = 0;
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">

            <div class="col-lg-12 grid-margin stretch-card">

                <div class="card">

                    <div class="card-body">
                        <h4 class="card-title">Product Table</h4>
                        <p class="text-danger">@TempData["ErrorMessage"]</p>
                        <a asp-action="create" class="btn btn-success">Create Product</a>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            No
                                        </th>
                                        <th>
                                            Image
                                        </th>
                                        <th>
                                            Name
                                        </th>
                                        <th>
                                            Price
                                        </th>
                                        <th>
                                            Category
                                        </th>
                                        <th>
                                            Settings
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (GetAdminProductVM productVM in Model)
                                    {
                                        @* ctrl+K+D *@
                                        no++;

                                        <tr>
                                            <td class="py-1">
                                                @no
                                            </td>
                                            <td>
                                                <img src="~/assets/images/website-images/@productVM.Image" />

                                            </td>
                                            <td>
                                                <p>@productVM.Name</p>
                                            </td>
                                            <td>
                                                <p>@productVM.Price</p>
                                            </td>
                                            <td>
                                                <p>@productVM.CategoryName</p>
                                            </td>
                                            <td>
                                                <a asp-action="Update" asp-route-id="@productVM.Id" class="btn btn-warning btn-info"><i class="mdi mdi-pencil"></i></a>
                                                <a asp-action="Delete" asp-route-id="@productVM.Id" class="btn btn-danger btn-info"><i class="mdi mdi-delete"></i></a>
                                                <a class="btn btn-primary"><i class="mdi mdi-email-open"></i></a>
                                            </td>

                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
